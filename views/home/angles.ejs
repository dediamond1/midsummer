<%-include('../includes/header.ejs')%>

<div class="p-10">
    <div class="py-2 mt-7">
        <h1 class="text-2xl font-poppins">Vilken lutning har din tak?</h1>
    </div>
    
    <form action="/angles" method="post">
        
        <div class="flex flex-row items-center p-5">
            <input type="radio" id="plåttak" name="tak" value="30" class="h-8 w-8">
            <label for="plåttak" class="text-xl ml-5">30 &deg</label>
        </div>
        <div class="flex flex-row items-center p-5">
            <input type="radio" name="tak" id="takpannor" value="45" class="h-8 w-8">
            <label for="takpannor" class="text-xl ml-5">45 &deg</label>
        </div>
        <div class="flex flex-row items-center p-5">
            <input type="radio" name="tak" id="papptak" value="papptak" class="h-8 w-8">
            <label for="papptak" class="text-xl ml-5">65 &deg</label>
        </div>
        <div class="flex flex-row items-center p-5">
            <input type="radio" id="eterniktak" name="tak" value="80" class="h-8 w-8">
            <label for="eterniktak" class="text-xl ml-5">80 &deg</label>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>">

        </div>
        <div class="flex flex-row items-center p-5">
            <input type="radio" id="eterniktak" name="tak" value="90" class="h-8 w-8">
            <label for="eterniktak" class="text-xl ml-5">90 &deg</label>
        </div>
        <div class="flex flex-row items-center p-5">
            <input type="radio" id="eterniktak" name="180" value="180" class="h-8 w-8">
            <label for="eterniktak" class="text-xl ml-5">180 &deg</label>
        </div>
        <div class="flex flex-row items-center p-5">
            <label for="other" class="text-xl mr-5">Annat lutning &deg</label>
            <input type="text" name="other" id="other" class="border-2 border-gray-700 rounded-md py-3 px-3 w-80"> <span class="text-2xl ml-3">&deg</span> 
        </div>
        <div>
            <button type="submit" class="rounded mt-10 bg-green-500 py-4 help px-7 uppercase text-white">NÄSTA</button>
        </div>
    </form>
</div>




